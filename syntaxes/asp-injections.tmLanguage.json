{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "ASP Injections",
    "scopeName": "asp.injection",
    "injectionSelector": "L:text.html -comment -source",
    "patterns": [
        {
            "include": "#asp-code-block"
        },
        {
            "include": "#asp-output-block"
        }
    ],
    "repository": {
        "asp-code-block": {
            "name": "meta.embedded.block.asp",
            "begin": "<%(?!=)",
            "end": "%>",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.definition.tag.asp"
                }
            },
            "endCaptures": {
                "0": {
                    "name": "punctuation.definition.tag.asp"
                }
            },
            "patterns": [
                {
                    "include": "#vbscript-code"
                }
            ]
        },
        "asp-output-block": {
            "name": "meta.embedded.expression.asp",
            "begin": "<%=",
            "end": "%>",
            "beginCaptures": {
                "0": {
                    "name": "punctuation.definition.tag.asp"
                }
            },
            "endCaptures": {
                "0": {
                    "name": "punctuation.definition.tag.asp"
                }
            },
            "patterns": [
                {
                    "include": "#vbscript-code"
                }
            ]
        },
        "vbscript-code": {
            "patterns": [
                {
                    "name": "comment.line.apostrophe.vbscript",
                    "match": "'.*$"
                },
                {
                    "name": "string.quoted.double.vbscript",
                    "begin": "\"",
                    "end": "\""
                },
                {
                    "name": "keyword.control.vbscript",
                    "match": "\\b(?i)(if|then|else|end|for|next|while|do|loop)\\b"
                }
            ]
        }
    }
}
